---
import "@fontsource/great-vibes";
import '@fontsource/cinzel-decorative';
import '@fontsource-variable/playfair-display';
const frontmatter = {
  title: "Fernanda y Ernesto | Save The Date",
  description: "Guarda la fecha para un día lleno de amor, alegría y momentos inolvidables.",
  ogImage: "https://plus.unsplash.com/premium_photo-1693227521269-d90b70e3ee06?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
};
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={frontmatter.description} />
		<!-- Meta Open Graph -->
		<meta property="og:title" content={frontmatter.title} />
		<meta property="og:description" content={frontmatter.description} />
		<meta property="og:url" content="https://www.fernandayernesto.love" />
		<meta property="og:image" content={frontmatter.ogImage} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="es_ES" />
		<title>
			Fernanda y Ernesto | Save The Date
		</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}
</style>
